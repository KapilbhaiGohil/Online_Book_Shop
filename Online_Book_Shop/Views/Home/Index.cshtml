
@{
    ViewData["Title"] = "Home Page";
}
@section style{
    <link rel="stylesheet" asp-append-version="true" href="~/css/Home/Index.css" />
}
<div class="home-filter">
    <div class="filter">
        <ul>
            <li id="genre-li">
                <div>
                    <img src="Images/icons8-catalog-90.png" />
                    <p>Genre</p>
                    <img id="gd" src="images/icons8-dropdown-96.png" />
                </div>
            </li>
            <li id="language-li">
                <div>
                    <img src="Images/icons8-language-90.png" />
                    <p>Language</p>
                    <img id="ld" src="images/icons8-dropdown-96.png" />
                </div>
            </li>
            <li id="year-li">
                <div>
                    <img src="Images/icons8-date-96.png" />
                    <p>Publish Year</p>
                    <img id="yd" src="images/icons8-dropdown-96.png" />
                </div>
            </li>
            <li id="country-li">
                <div>
                    <img src="Images/icons8-earth-52.png" />
                    <p>Country</p>
                    <img id="cd" src="images/icons8-dropdown-96.png" />
                </div>
            </li>
            <li id="price-li">
                <div>
                    <img src="Images/icons8-price-90.png" />
                    <p>Price</p>
                    <img id="pd" src="images/icons8-dropdown-96.png" />
                </div>
            </li>
        </ul>
    </div>
    <div class="search">
        <div class="search-input">
            <input type="text" placeholder="Search.." />
        </div>
        <div class="search-btn">
            <img src="images/icons8-search-100.png" />
        </div>
    </div>
</div>
<div class="home-books">
    <div class="book-row">
        <div class="heading">
            <h1>Popular Books of the week</h1>
        </div>
        <div id="books" class="books">
            <div class="book">
                <div class="book-img">
                    <img src="~/Images/BookImages/16c19cfc-8d97-4ab1-9ff9-d569c4654b50_the sielent patient.webp"/>
                </div>
                <div class="book-info">
                    <div class="date">
                        <img src="/Images//icons8-date-96.png" />
                        <span>19/01/3002</span>
                    </div>
                    <div class="book-name">
                        <h3>Book Name</h3>
                    </div>
                    <div class="book-price">
                        7890.00/-
                    </div>
                    <div class="desc">
                        this is good book to bye plaslkf asoj sdfjsk

                    </div>
                    <div class="rating">
                        <img src="~/Images/icons8-star-filled-96.png" />
                        <img src="~/Images/icons8-star-filled-96.png" />
                        <img src="~/Images/icons8-star-filled-96.png" />
                        <img src="~/Images/icons8-star-filled-96.png" />
                        <img src="~/Images/icons8-star-half-empty-90.png" />
                    </div>
                    <div class="cart-btn">
                        <input type="button" value="Add To Cart"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script type="text/javascript">
        let bookList = @Html.Raw(Json.Serialize(@ViewData["BookList"])) ;
        console.log(bookList);
    </script>
    <script src="~/js/Home.js"></script>
}
